{
  "name": "Ryu7z Live Notification",
  "version": "0.0.4",
  "manifest_version": 2,
  "description": "Cr√©e une notification lorsque Ryu7z est en live.",
  "homepage_url": "https://leodesigaux.com/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "notifications",
    "storage",
    "alarms",
    "https://www.youtube.com/*"
  ]
}